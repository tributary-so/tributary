{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["node"],
    "outDir": "./lib",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
      "@tributary-so/sdk": ["../sdk/src"]
    }
  },
  "exclude": ["node_modules", "tests"]
}
